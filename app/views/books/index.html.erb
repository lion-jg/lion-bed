<h1>
  あなたの心に寄り添う書籍検索
</h1>
<%= search_form_for @p, url: books_search_path do |f| %>
  <%= f.label :category_name_eq, '性別' %>
  <%= f.collection_select :category_name_eq, @category_name, :name, :name,  include_blank: '指定なし' %>
  <br>
  <%= f.label :age_eq, '年代：' %>
  <%= f.collection_select :age_eq, @book_age, :age, :age, include_blank: '指定なし'%>
  <br>
  <%= f.label :emotion_eq, '今の気持ち：' %>
  <%= f.collection_select :emotion_eq, @book_emotion, :emotion, :emotion, include_blank: '指定なし'%>
  <br>
  <%= f.submit '検索' %>
<% end %>